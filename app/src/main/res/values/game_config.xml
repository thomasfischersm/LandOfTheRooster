<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Game configuration constants. -->
    <!-- The idea is to have product flavors for different games that use this code as the game
         engine. Each game could have its own global game configuration. -->

    <!-- Each building has a number of peasants that exist without having to create unit rows. -->
    <integer name="implied_peasant_count">1</integer>

    <integer name="peasant_id">1</integer>

    <integer name="max_peasant_building_capacity">5</integer>

    <integer name="default_conquest_prize_resource_amount">1</integer>

    <integer name="initial_building_type_id">1</integer>

    <integer name="max_grace_distance">100</integer>

    <integer name="interaction_radius">30</integer>

    <integer name="battle_respawn_duration">3600000</integer> <!-- 1 hour -->

    <integer name="production_cycle_minutes">10</integer>

    <drawable name="building_ready_bg">@drawable/ready_building_bg</drawable>

    <color name="building_ready_bg_color">#66bb6a</color>

    <color name="building_default_bg_color">#78909c</color>

    <color name="pending_production_color">#90a4ae</color>

    <color name="completed_production_color">#263238</color>

    <integer name="max_production_circle_count">5</integer>

    <dimen name="production_circle_margin">2dp</dimen>

    <dimen name="production_circle_radius">3dp</dimen>

    <integer name="healing_per_health_point_duration_ms">60000</integer>
</resources>