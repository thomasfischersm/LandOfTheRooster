<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    This isn't a true layout. The BuildingInteractionDialogFragment won't use the view group but will use
    the children and arrange it in its own view group. Using a layout file makes the configuration
    of the views easier.
    -->

    <TextView
        android:id="@+id/unit_type_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        tools:text="Soldier"/>

    <TextView
        android:id="@+id/health_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        tools:text="5/10"/>

    <TextView
        android:id="@+id/estimated_time_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        tools:text="6 minutes"/>
</android.support.v7.widget.GridLayout>