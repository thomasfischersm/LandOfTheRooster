<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/resource_heading_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/resource_heading"
            android:textColor="#000"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.GridLayout
            android:id="@+id/resource_grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            app:columnCount="4"
            app:layout_constraintTop_toBottomOf="@+id/resource_heading_text_view"
            tools:layout_height="40dp"/>

        <TextView
            android:id="@+id/unit_heading_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/unit_heading"
            android:textColor="#000"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/resource_grid_layout"/>

        <android.support.v7.widget.GridLayout
            android:id="@+id/unit_grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            app:columnCount="4"
            app:layout_constraintTop_toBottomOf="@+id/unit_heading_text_view"
            tools:layout_height="40dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>